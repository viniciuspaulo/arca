<div class="row">
    <div class="col-md-2 pr-1">
        <div class="form-group">
            <label>ID</label>
            <input type="text" class="form-control" disabled placeholder="id" value="{{empresa.id}}">
        </div>
    </div>
    <div class="col-md-6 px-1">
        <div class="form-group">
            <label>Titulo</label>
            <input type="text" class="form-control" placeholder="Titulo" value="{{empresa.titulo}}">
        </div>
    </div>
    <div class="col-md-4 pl-1">
        <div class="form-group">
            <label for="exampleInputEmail1">Telefone</label>
            <input type="email" class="form-control tel" placeholder="Email" value="{{empresa.telefone}}">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 pr-1">
        <label>Endereço</label>
        <input type="text" class="form-control" placeholder="Endereço" value="{{empresa.endereco}}">
    </div>
    <div class="col-md-4 pr-1">
        <label>Cep</label>
        <input type="text" class="form-control cep" placeholder="Cep" value="{{empresa.cep}}">
    </div>
</div>

<div class="row">
    <div class="col-md-6 pr-1">
        <label>Cidade</label>
        <input type="text" class="form-control" placeholder="Cidade" value="{{empresa.endereco}}">
    </div>
    <div class="col-md-6 pr-1">
        <label>Estado</label>
        <input type="text" class="form-control" placeholder="Estado" value="{{empresa.cep}}" maxlength="2">
    </div>
</div>
<br>
<div class="row">
    <div class="col-md-12 pr-1">
        {% for categoria in categorias %}
            <span class="btn btn-round btn-info sharrre" style="padding: 3px 5px;">
                {{categoria.titulo}}
            </span>
        {% endfor %}
    </div>
</div>
<br>
<div class="row">
    <div class="col-md-12 pr-1">
        <label>Descricão</label>
        <textarea class="form-control" placeholder="Digite uma descricao" name="descricao" cols="30">
            {{empresa.endereco}}
        </textarea>
    </div>
</div>